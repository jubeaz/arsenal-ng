}

CmdEditModal {
    align: center middle;
}

CmdEditModal > Container  {
    width: 70%;
    height: 70%;
}

CmdEditModal > Container > VerticalScroll {
    width: 100%;
    height: auto;
}

CmdEditModal > Container > VerticalScroll > Input {
    layout: horizontal;
    width: 100%;
    height: 3;
    margin: 0;
    min-width: 50;
    padding: 0;
}
