$border: wide green;

$border-color-nofocus: $panel;
$border-title-color-nofocus: green;
$border-color-focus: green;
$border-title-color-focus: green;



Input {
    border: round $border-color-nofocus;
    background: transparent;
    border-title-color: $border-color-nofocus;
    border-title-style: bold;
    color: green;
}


Input > .input--placeholder {
    border: round $border-color-nofocus;
    background: transparent;
}

Input:focus {
    border: round $border-color-focus;
    border-title-color: $border-title-color-focus;
    border-title-style: bold;
}


Input:focus> .input--placeholder {
    border: round $border-color-focus;
    color: green;
}


#guing_infobox {
    layout: horizontal;
    height: 4;
    margin: 0;
    min-width: 50;
    padding: 0;
    color: green;
    border-title-color: $border-title-color-focus;
    border-title-style: bold;
}



#guing_search {
    layout: horizontal;
    /*background: $boost;*/
    height: 3;
    margin: 0;
    min-width: 50;
    padding: 0;
    /*border: ascii $accent;*/ 
    color: green;
}

#guing_table  {
    width: 100%;
    scrollbar-size: 0 1;
    scrollbar-color: $border-title-color-focus;
    border: round $border-color-nofocus;
    border-title-color: green;
    border-title-style: bold;
    height: 100%;
    color: green

}

#guing_table:focus{
    border: round $border-color-focus;
}

#guing_table > .datatable--header {
    text-style: bold;
    background: $background;
    /* color: $primary; */
    color: green
}

#guing_table > .datatable--cursor {
    background: $panel;
    color: auto;
}

#guing_table:focus > .datatable--cursor {
    background: $secondary;
}

#guing_table > .datatable--header-hover {
    text-style: bold;
    background: $background;
    color: $primary;
}

#guing_table > .datatable--hover {
    color: $text;
    background: $boost;
}


VerticalScroll {
    border: round $border-color-focus;
    border-title-color: $border-title-color-focus;
    border-title-style: bold;
    scrollbar-size: 0 1;
    scrollbar-color: $border-title-color-focus;
}


Container {
    height: 70%;
    background: transparent;
    border: round $border-color-focus;
    border-title-color: $border-title-color-focus;
    border-title-style: bold;
}

Horizontal {
    width: 70%;
    height: 25%;
    background: transparent;
    border: round $border-color-focus;
    border-title-color: $border-title-color-focus;
    border-title-style: bold;
}

Vertical {
    width: 70%;
    height: 25%;
    background: transparent;
    border: round $border-color-focus;
    border-title-color: $border-title-color-focus;
    border-title-style: bold;
}


GlobalVarsModal {
    align: center middle;
}

GlobalVarsEditModal {
    align: center middle;
}

GlobalVarsEditModal > VerticalScroll  {
    width: auto;
    height: 70%;
}

GlobalVarsEditModal > VerticalScroll > Input {
    align: left middle;
    width: auto;
    min-width: 50;
    height: 3;
    margin: 0;
    padding: 0 0;
}

CheatPreviewModal {
    align: center middle;
}

#previewbox {
    layout: horizontal;
    /*background: $boost;*/
    width: 70%;
    height: 25%;
    margin: 0;
    min-width: 50;
    padding: 0;
    border: ascii $accent;
}

TmuxModal {
    align: center middle;
}

TmuxModal > Vertical {
