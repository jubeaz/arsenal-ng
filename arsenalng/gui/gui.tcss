    height:  30%;
    width: 40%;
    margin: 0;
}

TmuxModal > Vertical > Horizontal{
    width: 100%;
    height: 50%;
    margin: 0;
    align: center middle;
    border: blank
}

TmuxModal > Vertical > Horizontal > Input {
    width: 20%;
    height: auto;
    border: solid red ;
    margin: 0;
}

#tmuxmodal_session_chosen {
    width: 40%;
    height: 100%;
    align: center middle;
    text-align: center;
    margin: 0;
}

#tmuxmodal_window_chosen {
    width: 40%;
    height: 100%;
    align: center middle;
    text-align: center;
    margin: 0;
}

#tmuxmodal_pane_chosen {
